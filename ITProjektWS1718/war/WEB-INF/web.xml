<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>PartnerboerseServlet</servlet-name>
    <servlet-class>de.hdm.ITProjekt17.server.PartnerboerseAdministrationImpl</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>loginService</servlet-name>
  	<servlet-class>de.hdm.ITProjekt17.server.LoginServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>loginService</servlet-name>
  	<url-pattern>/itprojektws1718/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>reportGeneratorServlet</servlet-name>
    <servlet-class>de.hdm.ITProjekt17.server.ReportGeneratorImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>reportGeneratorServlet</servlet-name>
    <url-pattern>/itprojektws1718/reportgenerator</url-pattern>
  </servlet-mapping>
    
  <servlet-mapping>
    <servlet-name>PartnerboerseServlet</servlet-name>
    <url-pattern>/itprojektws1718/partnerboerseadministration</url-pattern>
  </servlet-mapping>
  
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>ITProjektWS1718.html</welcome-file>
  </welcome-file-list>

</web-app>
